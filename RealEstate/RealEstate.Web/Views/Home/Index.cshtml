@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="container mt-4">

    <!-- BAŞLIK -->
    <div class="row mb-4">
        <div class="col-md-10">
            <h1 class="fw-bold hero-title">Hayalinizdeki Evi Bulun</h1>
            <p class="text-muted hero-subtitle">
                Kiralık ve satılık ilanlara kategorilerden ulaşabilirsiniz.
            </p>
        </div>
    </div>

    <!-- ========================= -->
    <!-- KATEGORİLER (KİRALIK / SATILIK) -->
    <!-- ========================= -->
    <div class="row g-4 mb-5">

        <!-- KİRALIK -->
        <div class="col-12 col-lg-6">
            <div class="category-card category-rent">
                <div class="category-body">
                    <div class="d-flex align-items-start gap-3">
                        <div class="category-icon rent-icon">🔑</div>

                        <div class="flex-grow-1">
                            <div class="category-badge rent-badge">KİRALIK</div>
                            <h4 class="mb-1 category-title rent-title">Kiralık Evler</h4>
                            <p class="category-desc mb-0">
                                Şehir ve bütçenize göre kiralık ev ilanlarını kolayca inceleyin.
                            </p>
                        </div>
                    </div>

                    <a class="category-btn rent-btn mt-3"
                       href="@Url.Action("Index", "Listing", new { type = "Kiralık" })">
                        Kiralık İlanlara Git →
                    </a>
                </div>
            </div>
        </div>

        <!-- SATILIK -->
        <div class="col-12 col-lg-6">
            <div class="category-card category-sale">
                <div class="category-body">
                    <div class="d-flex align-items-start gap-3">
                        <div class="category-icon sale-icon">🏠</div>

                        <div class="flex-grow-1">
                            <div class="category-badge sale-badge">SATILIK</div>
                            <h4 class="mb-1 category-title sale-title">Satılık Evler</h4>
                            <p class="category-desc mb-0">
                                Satılık ev ilanlarını görüntüleyin ve hayalinizdeki evi bulun.
                            </p>
                        </div>
                    </div>

                    <a class="category-btn sale-btn mt-3"
                       href="@Url.Action("Index", "Listing", new { type = "Satılık" })">
                        Satılık İlanlara Git →
                    </a>
                </div>
            </div>
        </div>

    </div>
</div>

<style>
    :root {
        --font-head: ui-serif, Georgia, Cambria, "Times New Roman", Times, serif;
        --font-body: ui-sans-serif, system-ui, -apple-system, "Segoe UI", Roboto, Arial, "Noto Sans", "Liberation Sans", sans-serif;
        --rent: #0d6efd;
        --sale: #198754;
        --text: #111827;
        --muted: #6b7280;
        --border: rgba(17,24,39,.10);
        --shadow: 0 10px 28px rgba(0,0,0,.06);
        --shadowHover: 0 16px 40px rgba(0,0,0,.10);
    }

    .hero-title {
        font-family: var(--font-head);
        font-weight: 900;
        letter-spacing: -0.4px;
        color: var(--text);
        line-height: 1.05;
        margin-bottom: 8px;
    }

    .hero-subtitle {
        font-family: var(--font-body);
        color: var(--muted);
        font-size: 1rem;
        margin-bottom: 0;
    }

    .category-card {
        border-radius: 18px;
        border: 1px solid var(--border);
        box-shadow: var(--shadow);
        transition: transform .18s ease, box-shadow .18s ease, border-color .18s ease;
        overflow: hidden;
        background: #fff;
    }

        .category-card:hover {
            transform: translateY(-3px);
            box-shadow: var(--shadowHover);
            border-color: rgba(17,24,39,.16);
        }

    .category-rent {
        background: linear-gradient(180deg, rgba(13,110,253,.06), rgba(255,255,255,1) 55%);
    }

    .category-sale {
        background: linear-gradient(180deg, rgba(25,135,84,.06), rgba(255,255,255,1) 55%);
    }

    .category-body {
        padding: 18px 18px 16px;
        font-family: var(--font-body);
    }

    .category-icon {
        width: 56px;
        height: 56px;
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 28px;
        color: #fff;
        flex-shrink: 0;
        box-shadow: 0 10px 18px rgba(0,0,0,.10);
    }

    .rent-icon {
        background: linear-gradient(135deg, #0d6efd, #6aa8ff);
    }

    .sale-icon {
        background: linear-gradient(135deg, #198754, #6fe2a0);
    }

    .category-badge {
        display: inline-block;
        font-size: .72rem;
        font-weight: 800;
        letter-spacing: .6px;
        padding: 6px 10px;
        border-radius: 999px;
        margin-bottom: 6px;
    }

    .rent-badge {
        background: rgba(13,110,253,.12);
        color: var(--rent);
    }

    .sale-badge {
        background: rgba(25,135,84,.12);
        color: var(--sale);
    }

    .category-title {
        font-family: var(--font-head);
        font-weight: 900;
        letter-spacing: -0.25px;
        margin: 0;
    }

    .rent-title {
        color: #0b5ed7;
    }

    .sale-title {
        color: #146c43;
    }

    .category-desc {
        color: #4b5563;
        font-size: .98rem;
        line-height: 1.45;
        margin-top: 6px;
    }

    .category-btn {
        width: 100%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        border-radius: 12px;
        padding: 12px 14px;
        font-weight: 800;
        border: 0;
        transition: transform .15s ease, filter .15s ease, box-shadow .15s ease;
        box-shadow: 0 10px 18px rgba(0,0,0,.08);
    }

        .category-btn:hover {
            transform: translateY(-1px);
            filter: brightness(.98);
            box-shadow: 0 14px 26px rgba(0,0,0,.12);
        }

    .rent-btn {
        background: var(--rent);
        color: #fff;
    }

    .sale-btn {
        background: var(--sale);
        color: #fff;
    }

    @@media (max-width: 576px) {
        .hero-title {
            font-size: 1.65rem;
        }
    }
</style>
