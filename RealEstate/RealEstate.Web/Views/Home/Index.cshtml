@using RealEstate.Web.Models
@model List<Property>

@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="fw-bold">Hayalinizdeki Evi Bulun</h1>
            <p class="text-muted">
                Bu sayfadaki ilanlar Web API'den (RealEstate.Api) gelmektedir.
            </p>
        </div>
    </div>

    <div class="row">
        @if (Model.Any())
        {
            foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <img src="@item.ImageUrl" class="card-img-top" alt="@item.Title" />
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@item.Title</h5>
                            <p class="card-text mb-1">
                                <strong>@item.City - @item.District</strong><br />
                                @(item.RoomCount + 1) • @item.Area m²
                            </p>
                            <p class="fw-bold text-success">
                                @item.Price.ToString("N0") TL
                            </p>
                            <a href="#" class="btn btn-outline-primary mt-auto">
                                Detayları Gör
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info">
                    Şu anda gösterilecek ilan bulunamadı.
                </div>
            </div>
        }
    </div>
</div>