@using Microsoft.AspNetCore.Mvc.Rendering
@model RealEstate.Web.Models.PaginationViewModel<RealEstate.Web.Models.ListingViewModel>
@inject RealEstate.Web.Services.AuthService AuthService

@{
    ViewData["Title"] = "ƒ∞lanlar";
    var currentUser = AuthService.GetCurrentUser();
    var isAdmin = currentUser?.Role == "Admin";

    // ‚úÖ selected uyarƒ±larƒ±nƒ± bitirmek i√ßin TagHelper yolu
    string currentType = ViewBag.CurrentType as string ?? "";
    string currentSort = ViewBag.CurrentSort as string ?? "";
    string currentRoom = ViewBag.CurrentRoomCount as string ?? "";

    var typeOptions = ViewBag.TypeOptions as IEnumerable<SelectListItem> ?? Enumerable.Empty<SelectListItem>();
    var sortOptions = ViewBag.SortOptions as IEnumerable<SelectListItem> ?? Enumerable.Empty<SelectListItem>();
    var roomOptions = ViewBag.RoomOptions as IEnumerable<SelectListItem> ?? Enumerable.Empty<SelectListItem>();
}

<div class="container-xxl">

    <!-- PAGE HEADER -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3 mb-4">
        <div>
            <h2 class="fw-bold mb-1 d-flex align-items-center gap-2">
                <span class="d-inline-flex align-items-center justify-content-center rounded-3" 
                      style="width: 50px; height: 50px; background: linear-gradient(135deg, #f472b6, #ec4899); box-shadow: 0 10px 25px -8px rgba(236,72,153,0.4);">
                    <span style="font-size: 1.5rem;">üè†</span>
                </span>
                T√ºm ƒ∞lanlar
            </h2>
            <p class="text-muted mb-0 ms-5 ps-3">Hayalindeki evi bul, hemen ba≈üla! ‚ú®</p>
        </div>
        <div class="d-flex gap-2 w-100 w-md-auto">
            <button class="btn d-md-none flex-grow-1 rounded-pill" type="button" data-bs-toggle="collapse"
                data-bs-target="#filterPanel" aria-expanded="false" aria-controls="filterPanel"
                style="border: 2px solid #f9a8d4; color: #ec4899;">
                <i class="bi bi-sliders me-1"></i>Filtreler
            </button>
            <a asp-action="Create" class="btn btn-success fw-bold flex-grow-1 flex-md-grow-0 px-4 rounded-pill">
                <i class="bi bi-plus-lg me-1"></i>ƒ∞lan Ekle
            </a>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-4 col-lg-3">
            <div id="filterPanel" class="collapse show d-md-block">
                <div class="card filter-card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0 text-white"><i class="bi bi-sliders me-2"></i>Filtrele üîç</h5>
                    </div>
                    <div class="card-body">
                        <form asp-action="Index" method="get" class="d-flex flex-column gap-3">

                            <div>
                                <label class="form-label fw-bold">ƒ∞lan Tipi</label>
                                <select name="type" class="form-select" asp-items="typeOptions">
                                </select>
                            </div>

                            <div>
                                <label class="form-label fw-bold">Sƒ±ralama</label>
                                <select name="sort" class="form-select" asp-items="sortOptions">
                                </select>
                            </div>

                            <div>
                                <label class="form-label fw-bold">≈ûehir</label>
                                <input type="text" name="city" class="form-control" placeholder="√ñrn: ƒ∞stanbul"
                                    value="@ViewBag.CurrentCity">
                            </div>

                            <div>
                                <label class="form-label fw-bold">Fiyat Aralƒ±ƒüƒ± (TL)</label>
                                <div class="d-flex gap-2">
                                    <input type="number" name="minPrice" class="form-control" placeholder="Min"
                                        value="@ViewBag.CurrentMinPrice">
                                    <input type="number" name="maxPrice" class="form-control" placeholder="Max"
                                        value="@ViewBag.CurrentMaxPrice">
                                </div>
                            </div>

                            <div>
                                <label class="form-label fw-bold">Oda Sayƒ±sƒ±</label>
                                <select name="roomCount" class="form-select" asp-items="roomOptions">
                                </select>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary w-100">Uygula</button>
                                <a asp-action="Index" class="btn btn-outline-secondary w-100">Temizle</a>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8 col-lg-9">
            @if (Model == null || Model.Items.Count == 0)
            {
                <div class="alert alert-warning text-center p-5 rounded empty-state">
                    <h4 class="mb-2">üîç ƒ∞lan Bulunamadƒ±</h4>
                    <p class="mb-0">Se√ßtiƒüiniz kriterlere uygun ilan yok. Filtreleri temizleyip tekrar deneyin.</p>
                </div>
            }
            else
            {
                <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-4 listing-grid">
                    @foreach (var item in Model.Items)
                    {
                        <div class="col">
                            <div class="card listing-card h-100">
                                <div class="position-relative">
                                    @{
                                        var firstImage = item.Images?.FirstOrDefault();
                                        var hasBase64Image = firstImage != null && !string.IsNullOrEmpty(firstImage.Base64Data);
                                    }
                                    @if (hasBase64Image)
                                    {
                                        <img src="data:image/png;base64,@firstImage!.Base64Data" 
                                            class="listing-img" alt="@item.Title"
                                            onerror="this.src='data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 600 400%22%3E%3Crect fill=%22%23f1f5f9%22 width=%22600%22 height=%22400%22/%3E%3Ctext x=%2250%25%22 y=%2250%25%22 font-family=%22system-ui%22 font-size=%2224%22 fill=%22%23cbd5e1%22 text-anchor=%22middle%22 dominant-baseline=%22middle%22%3EResim Y√ºkleme Hatasƒ±%3C/text%3E%3C/svg%3E'">
                                    }
                                    else if (!string.IsNullOrEmpty(item.ImageUrl))
                                    {
                                        @* ImageUrl ba≈üƒ±nda / varsa localhost:5180 ile birle≈ütir, yoksa direkt kullan *@
                                        <img src="@(item.ImageUrl.StartsWith("/") ? "http://localhost:5180" + item.ImageUrl : item.ImageUrl)" 
                                            class="listing-img" alt="@item.Title"
                                            onerror="this.src='data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 600 400%22%3E%3Crect fill=%22%23f1f5f9%22 width=%22600%22 height=%22400%22/%3E%3Ctext x=%2250%25%22 y=%2250%25%22 font-family=%22system-ui%22 font-size=%2224%22 fill=%22%23cbd5e1%22 text-anchor=%22middle%22 dominant-baseline=%22middle%22%3EResim Y√ºkleme Hatasƒ±%3C/text%3E%3C/svg%3E'">
                                    }
                                    else
                                    {
                                        <div
                                            class="listing-img listing-placeholder d-flex align-items-center justify-content-center">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="#cbd5e1"
                                                viewBox="0 0 16 16">
                                                <path d="M6.002 5.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z" />
                                                <path
                                                    d="M2.002 1a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V3a2 2 0 0 0-2-2h-12zm12 1a1 1 0 0 1 1 1v6.5l-3.777-1.947a.5.5 0 0 0-.577.093l-3.71 3.71-2.66-1.772a.5.5 0 0 0-.63.062L1.002 12V3a1 1 0 0 1 1-1h12z" />
                                            </svg>
                                        </div>
                                    }

                                    <span
                                        class="position-absolute top-0 end-0 listing-badge badge @(item.Type == "Kiralƒ±k" ? "bg-warning text-dark" : "bg-success") m-2">
                                        @item.Type
                                    </span>
                                </div>

                                <div class="card-body d-flex flex-column gap-1">
                                    <h5 class="card-title text-truncate" title="@item.Title">@item.Title</h5>
                                    <p class="listing-meta small mb-1">
                                        <i class="bi bi-geo-alt-fill text-danger"></i> @item.City / @(item.District ?? "-")
                                    </p>

                                    <div class="d-flex justify-content-between text-muted small">
                                        <span><i class="bi bi-door-open"></i> @(item.RoomCount ?? "-")</span>
                                        <span><i class="bi bi-aspect-ratio"></i> @item.SquareMeters m¬≤</span>
                                    </div>

                                    <h5 class="text-primary fw-bold mb-1">@item.Price.ToString("N0") ‚Ç∫</h5>

                                    <div class="d-grid gap-2 mt-auto">
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                            class="btn btn-outline-primary btn-sm rounded-pill">üëÄ Detaylarƒ± G√∂r</a>

                                        @* ‚úÖ FAVORƒ∞LERE EKLE BUTONU (DOƒûRU ACTION) *@
                                                @if (AuthService.IsAuthenticated())
                                        {
                                            <form asp-controller="Favorite" asp-action="Add" method="post">
                                                @Html.AntiForgeryToken()

                                                <input type="hidden" name="listingId" value="@item.Id" />
                                                <input type="hidden" name="returnUrl"
                                                    value="@($"{Context.Request.Path}{Context.Request.QueryString}")" />

                                                <button type="submit" class="btn btn-outline-danger btn-sm w-100 rounded-pill">
                                                    üíï Favorilere Ekle
                                                </button>
                                            </form>
                                        }



                                        @if (isAdmin || (currentUser != null && item.UserId.HasValue && item.UserId ==
                                                                        currentUser.Id))
                                        {
                                            <div class="btn-group">
                                                <a asp-action="Edit" asp-route-id="@item.Id"
                                                    class="btn btn-warning btn-sm">D√ºzenle</a>
                                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"
                                                    onclick="return confirm('Silmek istediƒüine emin misin?');">Sil</a>
                                            </div>
                                        }
                                    </div>
                                </div>

                                <div
                                    class="card-footer bg-white text-muted small d-flex justify-content-between align-items-center">
                                    <span><i class="bi bi-clock"></i> @item.CreatedDate.ToString("dd.MM.yyyy")</span>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- PAGINATION CONTROLS -->
                @if (Model.TotalPages > 1)
                {
                    <nav class="mt-5" aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            <!-- Previous Page -->
                            @if (Model.HasPreviousPage)
                            {
                                <li class="page-item">
                                    <a class="page-link" 
                                       asp-action="Index"
                                       asp-route-page="@(Model.PageNumber - 1)"
                                       asp-route-type="@ViewBag.CurrentType"
                                       asp-route-sort="@ViewBag.CurrentSort"
                                       asp-route-city="@ViewBag.CurrentCity"
                                       asp-route-minPrice="@ViewBag.CurrentMinPrice"
                                       asp-route-maxPrice="@ViewBag.CurrentMaxPrice"
                                       asp-route-roomCount="@ViewBag.CurrentRoomCount">
                                        <i class="bi bi-chevron-left"></i> √ñnceki
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item disabled">
                                    <span class="page-link"><i class="bi bi-chevron-left"></i> √ñnceki</span>
                                </li>
                            }

                            <!-- Page Numbers -->
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                var isActive = (i == Model.PageNumber);
                                <li class="page-item @(isActive ? "active" : "")">
                                    <a class="page-link" 
                                       asp-action="Index"
                                       asp-route-page="@i"
                                       asp-route-type="@ViewBag.CurrentType"
                                       asp-route-sort="@ViewBag.CurrentSort"
                                       asp-route-city="@ViewBag.CurrentCity"
                                       asp-route-minPrice="@ViewBag.CurrentMinPrice"
                                       asp-route-maxPrice="@ViewBag.CurrentMaxPrice"
                                       asp-route-roomCount="@ViewBag.CurrentRoomCount">
                                        @i
                                    </a>
                                </li>
                            }

                            <!-- Next Page -->
                            @if (Model.HasNextPage)
                            {
                                <li class="page-item">
                                    <a class="page-link" 
                                       asp-action="Index"
                                       asp-route-page="@(Model.PageNumber + 1)"
                                       asp-route-type="@ViewBag.CurrentType"
                                       asp-route-sort="@ViewBag.CurrentSort"
                                       asp-route-city="@ViewBag.CurrentCity"
                                       asp-route-minPrice="@ViewBag.CurrentMinPrice"
                                       asp-route-maxPrice="@ViewBag.CurrentMaxPrice"
                                       asp-route-roomCount="@ViewBag.CurrentRoomCount">
                                        Sonraki <i class="bi bi-chevron-right"></i>
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item disabled">
                                    <span class="page-link">Sonraki <i class="bi bi-chevron-right"></i></span>
                                </li>
                            }
                        </ul>
                    </nav>

                    <div class="text-center mt-3 text-muted small">
                        <p>Sayfa <strong>@Model.PageNumber</strong> / <strong>@Model.TotalPages</strong> 
                           (Toplam <strong>@Model.TotalCount</strong> ilan)</p>
                    </div>
                }
            }
        </div>
    </div>
</div>