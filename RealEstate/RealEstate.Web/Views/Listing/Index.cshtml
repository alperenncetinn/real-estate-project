@using Microsoft.AspNetCore.Mvc.Rendering
@model List<RealEstate.Web.Models.ListingViewModel>
@inject RealEstate.Web.Services.AuthService AuthService

@{
    ViewData["Title"] = "ƒ∞lanlar";
    var currentUser = AuthService.GetCurrentUser();
    var isAdmin = currentUser?.Role == "Admin";

    // ‚úÖ selected uyarƒ±larƒ±nƒ± bitirmek i√ßin TagHelper yolu
    string currentType = ViewBag.CurrentType as string ?? "";
    string currentSort = ViewBag.CurrentSort as string ?? "";
    string currentRoom = ViewBag.CurrentRoomCount as string ?? "";

    var typeOptions = ViewBag.TypeOptions as IEnumerable<SelectListItem> ?? Enumerable.Empty<SelectListItem>();
    var sortOptions = ViewBag.SortOptions as IEnumerable<SelectListItem> ?? Enumerable.Empty<SelectListItem>();
    var roomOptions = ViewBag.RoomOptions as IEnumerable<SelectListItem> ?? Enumerable.Empty<SelectListItem>();
}

<div class="container-xxl mt-3">

    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3 mb-4">
        <div>
            <h2 class="mb-1">üè° Emlak ƒ∞lanlarƒ±</h2>
            <p class="text-muted mb-0 small">G√ºncel ilanlarƒ± filtreleyin, size en uygun evi hemen bulun.</p>
        </div>
        <div class="d-flex gap-2 w-100 w-md-auto">
            <button class="btn btn-outline-primary d-md-none flex-grow-1" type="button" data-bs-toggle="collapse"
                    data-bs-target="#filterPanel" aria-expanded="false" aria-controls="filterPanel">
                <i class="bi bi-funnel"></i> Filtreleri A√ß
            </button>
            <a asp-action="Create" class="btn btn-success fw-bold flex-grow-1 flex-md-grow-0">+ Yeni ƒ∞lan Ekle</a>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-4 col-lg-3">
            <div id="filterPanel" class="collapse show d-md-block">
                <div class="card filter-card mb-4">
                    <div class="card-header text-dark">
                        <h5 class="mb-0"><i class="bi bi-funnel-fill me-2"></i>Filtrele</h5>
                    </div>
                    <div class="card-body">
                        <form asp-action="Index" method="get" class="d-flex flex-column gap-3">

                            <div>
                                <label class="form-label fw-bold">ƒ∞lan Tipi</label>
                                <select name="type" class="form-select"
                                        asp-for="@currentType"
                                        asp-items="typeOptions">
                                </select>
                            </div>

                            <div>
                                <label class="form-label fw-bold">Sƒ±ralama</label>
                                <select name="sort" class="form-select"
                                        asp-for="@currentSort"
                                        asp-items="sortOptions">
                                </select>
                            </div>

                            <div>
                                <label class="form-label fw-bold">≈ûehir</label>
                                <input type="text" name="city" class="form-control" placeholder="√ñrn: ƒ∞stanbul" value="@ViewBag.CurrentCity">
                            </div>

                            <div>
                                <label class="form-label fw-bold">Fiyat Aralƒ±ƒüƒ± (TL)</label>
                                <div class="d-flex gap-2">
                                    <input type="number" name="minPrice" class="form-control" placeholder="Min" value="@ViewBag.CurrentMinPrice">
                                    <input type="number" name="maxPrice" class="form-control" placeholder="Max" value="@ViewBag.CurrentMaxPrice">
                                </div>
                            </div>

                            <div>
                                <label class="form-label fw-bold">Oda Sayƒ±sƒ±</label>
                                <select name="roomCount" class="form-select"
                                        asp-for="@currentRoom"
                                        asp-items="roomOptions">
                                </select>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary w-100">Uygula</button>
                                <a asp-action="Index" class="btn btn-outline-secondary w-100">Temizle</a>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8 col-lg-9">
            @if (Model == null || Model.Count == 0)
            {
                <div class="alert alert-warning text-center p-5 rounded empty-state">
                    <h4 class="mb-2">üîç ƒ∞lan Bulunamadƒ±</h4>
                    <p class="mb-0">Se√ßtiƒüiniz kriterlere uygun ilan yok. Filtreleri temizleyip tekrar deneyin.</p>
                </div>
            }
            else
            {
                <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-4 listing-grid">
                    @foreach (var item in Model)
                    {
                        <div class="col">
                            <div class="card listing-card h-100">
                                <div class="position-relative">
                                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                                    {
                                        <img src="http://localhost:5180@(item.ImageUrl)" class="listing-img" alt="@item.Title"
                                             onerror="this.src='data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 600 400%22%3E%3Crect fill=%22%23f1f5f9%22 width=%22600%22 height=%22400%22/%3E%3Ctext x=%2250%25%22 y=%2250%25%22 font-family=%22system-ui%22 font-size=%2224%22 fill=%22%23cbd5e1%22 text-anchor=%22middle%22 dominant-baseline=%22middle%22%3EResim Y√ºkleme Hatasƒ±%3C/text%3E%3C/svg%3E'">
                                    }
                                    else
                                    {
                                        <div class="listing-img listing-placeholder d-flex align-items-center justify-content-center">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="#cbd5e1" viewBox="0 0 16 16">
                                                <path d="M6.002 5.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z" />
                                                <path d="M2.002 1a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V3a2 2 0 0 0-2-2h-12zm12 1a1 1 0 0 1 1 1v6.5l-3.777-1.947a.5.5 0 0 0-.577.093l-3.71 3.71-2.66-1.772a.5.5 0 0 0-.63.062L1.002 12V3a1 1 0 0 1 1-1h12z" />
                                            </svg>
                                        </div>
                                    }

                                    <span class="position-absolute top-0 end-0 listing-badge badge @(item.Type == "Kiralƒ±k" ? "bg-warning text-dark" : "bg-success") m-2">
                                        @item.Type
                                    </span>
                                </div>

                                <div class="card-body d-flex flex-column gap-1">
                                    <h5 class="card-title text-truncate" title="@item.Title">@item.Title</h5>
                                    <p class="listing-meta small mb-1">
                                        <i class="bi bi-geo-alt-fill text-danger"></i> @item.City / @(item.District ?? "-")
                                    </p>

                                    <div class="d-flex justify-content-between text-muted small">
                                        <span><i class="bi bi-door-open"></i> @(item.RoomCount ?? "-")</span>
                                        <span><i class="bi bi-aspect-ratio"></i> @item.SquareMeters m¬≤</span>
                                    </div>

                                    <h5 class="text-primary fw-bold mb-1">@item.Price.ToString("N0") ‚Ç∫</h5>

                                    <div class="d-grid gap-2 mt-auto">
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           class="btn btn-outline-primary btn-sm">Detaylarƒ± G√∂r</a>

                                        @* ‚úÖ FAVORƒ∞LERE EKLE BUTONU (DOƒûRU ACTION) *@
                                        @if (AuthService.IsAuthenticated())
                                        {
                                            <form asp-controller="Favorite" asp-action="Add" method="post">
                                                @Html.AntiForgeryToken()

                                                <input type="hidden" name="listingId" value="@item.Id" />
                                                <input type="hidden" name="returnUrl" value="@($"{Context.Request.Path}{Context.Request.QueryString}")" />

                                                <button type="submit" class="btn btn-outline-danger btn-sm w-100">
                                                    üíó Favorilere Ekle
                                                </button>
                                            </form>
                                        }



                                        @if (isAdmin || (currentUser != null && item.UserId.HasValue && item.UserId == currentUser.Id))
                                        {
                                            <div class="btn-group">
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">D√ºzenle</a>
                                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"
                                                   onclick="return confirm('Silmek istediƒüine emin misin?');">Sil</a>
                                            </div>
                                        }
                                    </div>
                                </div>

                                <div class="card-footer bg-white text-muted small d-flex justify-content-between align-items-center">
                                    <span><i class="bi bi-clock"></i> @item.CreatedDate.ToString("dd.MM.yyyy")</span>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>
