@model RealEstate.Web.Models.ListingViewModel
@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">İlanlar</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-7 mb-4">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                @* ImageUrl başında / varsa localhost:5180 ile birleştir, yoksa direkt kullan *@
                <img src="@(Model.ImageUrl.StartsWith("/") ? "http://localhost:5180" + Model.ImageUrl : Model.ImageUrl)"
                    alt="@Model.Title" class="img-fluid rounded shadow w-100" style="max-height: 500px; object-fit: cover;"
                    onerror="this.onerror=null; this.src='data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 600 400%22%3E%3Crect fill=%22%23f1f5f9%22 width=%22600%22 height=%22400%22/%3E%3Ctext x=%2250%25%22 y=%2250%25%22 font-family=%22system-ui%22 font-size=%2224%22 fill=%22%23cbd5e1%22 text-anchor=%22middle%22 dominant-baseline=%22middle%22%3EResim Yüklenemedi%3C/text%3E%3C/svg%3E';">
            }
            else
            {
                <div class="bg-secondary text-white d-flex align-items-center justify-content-center rounded shadow"
                    style="height: 400px;">
                    <span class="fs-4">Resim Yok</span>
                </div>
            }
        </div>

        <div class="col-md-5">
            <div class="card shadow border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <h3 class="card-title mb-0 fw-bold">@Model.Title</h3>
                        @if (!Model.IsActive)
                        {
                            <span class="badge bg-danger">Pasif</span>
                        }
                    </div>

                    <h3 class="text-primary fw-bold mb-4">@Model.Price.ToString("N0") ₺</h3>
                    <hr>

                    <ul class="list-group list-group-flush mb-3">
                        <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                            <span class="text-muted">İlan Türü</span>
                            <span
                                class="badge @(Model.Type == "Satılık" ? "bg-success" : "bg-info") rounded-pill">@Model.Type</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                            <span class="text-muted">Şehir / İlçe</span>
                            <span class="fw-bold">@Model.City @(!string.IsNullOrEmpty(Model.District) ? " / " +
                                                                Model.District : "")</span>
                        </li>

                        <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                            <span class="text-muted">Oda Sayısı</span>
                            <span class="fw-bold">@(string.IsNullOrEmpty(Model.RoomCount) ? "Belirtilmemiş" :
                                                                Model.RoomCount)</span>
                        </li>

                        <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                            <span class="text-muted">Metrekare</span>
                            <span class="fw-bold">@Model.SquareMeters m²</span>
                        </li>

                        <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                            <span class="text-muted">İlan Tarihi</span>
                            <span>@Model.CreatedDate.ToString("dd.MM.yyyy")</span>
                        </li>

                        @if (!string.IsNullOrEmpty(Model.OwnerName))
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                <span class="text-muted">İlan Sahibi</span>
                                <span class="fw-bold">@Model.OwnerName</span>
                            </li>
                        }

                        @if (!string.IsNullOrEmpty(Model.OwnerPhone))
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                <span class="text-muted"><i class="bi bi-telephone"></i> İletişim</span>
                                <a href="tel:@Model.OwnerPhone" class="fw-bold text-decoration-none">@Model.OwnerPhone</a>
                            </li>
                        }
                    </ul>

                    @if (!Model.IsActive && !string.IsNullOrEmpty(Model.DeactivationReason))
                    {
                        <div class="alert alert-warning mt-3">
                            <strong>Bu ilan pasife alınmıştır.</strong><br>
                            <small>Neden: @Model.DeactivationReason</small>
                        </div>
                    }

                    <a asp-action="Index" class="btn btn-outline-primary w-100 mt-2">Geri Dön</a>
                </div>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.Description))
    {
        <div class="card mt-4 shadow-sm border-0 mb-5">
            <div class="card-header bg-light">
                <h5 class="mb-0 fw-bold">Açıklama</h5>
            </div>
            <div class="card-body">
                <p class="mb-0 text-secondary" style="white-space: pre-line; line-height: 1.6;">@Model.Description</p>
            </div>
        </div>
    }
</div>